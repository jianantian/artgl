{
  "compilerOptions": {
    "outDir": "./dist/src",
    "sourceMap": true,
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": false,
    "lib": [
      "es6",
      "dom"
    ],
    // "baseUrl": "./src"
  },
  "include": [
    "src", 
  ],
  "exclude": [
    "node_modules",
    "src/wasm-scene/**"
  ],
  "paths": {},
  "atom": {
    "rewriteTsconfig": false
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "typedocs",
    "excludeExternals": true,
    "exclude": [
      "example/**",
      "src/wasm-scene/**"
    ]
  }
}